<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6">
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
        <%= f.label :Nombre, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control-plaintext" %>
      </div>
    </div>
<div class="form-group row">
        <%= f.label :Autor, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :author, size: "25x10", class: "form-control-plaintext" %>
      </div>
    </div>
<div class="form-group row">
      <%= f.label :image %>
	<div class="col-sm-10">
        <%= f.file_field :image, class: "form-control-plaintext" %>
      </div>
    </div>
  <div class="actions">
    <%= f.submit "Guardar libro", class: "btn btn-primary" %>
    <%= link_to 'Atras', @book, class: "btn btn-danger", role: "button" %>
    <%= link_to 'Libros', books_path, class: "btn btn-info", role: "button" %>
  </div>
<% end %>
</div>
</div>
